@{
    ViewBag.Title = "Checkout";
}

<h2 class="checkout-title">Checkout</h2>

<div class="checkout-container">
    <table class="order-summary">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in ViewBag.Books)
            {
                <tr>
                    <td>@book.title</td>
                    <td>@book.price.ToString("N0") VNĐ</td>
                </tr>
            }
            @foreach (var product in ViewBag.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("N0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="order-info">
        <p><strong>Order Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Total Price:</strong> @ViewBag.TotalPrice.ToString("N0") VNĐ</p>
    </div>

    @using (Html.BeginForm("PlaceOrder", "Order", FormMethod.Post))
    {
        <div class="form-group">
            <label for="paymentMethod">Payment Method:</label>
            <select id="paymentMethod" name="paymentMethod" required>
                <option value="Cash">Cash</option>
                <option value="Credit Card">Credit Card</option>
                <option value="Online Banking">Online Banking</option>
            </select>
        </div>

        <div class="form-group">
            <label for="shippingAddress">Shipping Address:</label>
            <input type="text" id="shippingAddress" name="shippingAddress" placeholder="Enter your address" required />
        </div>

        <button type="submit" class="btn-place-order">Place Order</button>
    }
</div>

<style>
    .checkout-container {
        width: 50%;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .checkout-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .order-summary {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .order-summary th, .order-summary td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-place-order {
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
    }

        .btn-place-order:hover {
            background-color: #218838;
        }
</style>
