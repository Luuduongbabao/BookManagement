@using BookManagement.Models
@model Book

<div class="book-detail">
    <div class="book-image">
        <img src="@Model.Book_Image" alt="@Model.title" onerror="this.src='/Images/default-book.png';" />
    </div>
    <div class="book-info">
        <h2>@Model.title</h2>
        <p><strong>Author:</strong> @Model.author</p>
        <p><strong>Publisher:</strong> @Model.publisher</p>
        <p><strong>Category:</strong> @(Model.Category != null ? Model.Category.CategoryName : "No information available")</p>
        @*<p><strong>Số lượng còn:</strong> @Model.stock</p>*@
        <p><strong>Price:</strong> @Model.price.ToString("N0") đ</p>
        <a href="@Url.Action("Index", "Book")" class="back-btn">Back</a>
        @*<a href="@Url.Action("AddToCartBook", "Cart")" class="back-btn">Thêm vô giỏ hàng</a>*@
    </div>
</div>

<style>
    .book-detail {
        display: flex;
        gap: 20px;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .book-image img {
        width: 200px;
        height: auto;
        border-radius: 5px;
    }

    .book-info {
        flex: 1;
    }

    .buy-btn, .back-btn {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
    }

    .buy-btn {
        background: #28a745;
        color: white;
    }

    .back-btn {
        background: #007bff;
        color: white;
    }
</style>
