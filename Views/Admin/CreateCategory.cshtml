@model BookManagement.Models.Category

@{
    ViewBag.Title = "Add New Category";
}

<h2>
    <a href="@Url.Action("ListCategory", "Admin")" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryID)
        @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control" }) 
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a href="@Url.Action("ListCategory", "Admin")" class="btn btn-secondary">Back</a>
}
