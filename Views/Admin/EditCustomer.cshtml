@model BookManagement.Models.Customer
@{
    ViewBag.Title = "Edit Customer";
}

<div class="container mt-4">
    <h2>
        <a href="@Url.Action("ListCustomer", "Admin")" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </h2>
    @using (Html.BeginForm("EditCustomer", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.CusID)
            @Html.TextBoxFor(model => model.CusID, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusName)
            @Html.TextBoxFor(model => model.CusName, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusEmail)
            @Html.TextBoxFor(model => model.CusEmail, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusPhone)
            @Html.TextBoxFor(model => model.CusPhone, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusAddress)
            @Html.TextBoxFor(model => model.CusAddress, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusPassword)
            @Html.TextBoxFor(model => model.CusPassword, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusDob)
            <input type="text" name="CusDob" class="form-control"
                   value="@(Model.CusDob != null ? Model.CusDob.ToString("dd-MM-yyyy") : "")" />
        </div>


        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
    }
</div>
