<!-- Style -->
<style>
    .admin-dashboard {
        display: flex;
        gap: 20px;
    }

    /* Cột trái (Thống kê) */
    .dashboard-left {
        width: 35%;
    }

    .admin-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
    }

    .stat-card {
        background: #3498DB;
        color: white;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        width: 150px;
    }

    /* Cột phải (Biểu đồ + Đơn hàng) */
    .dashboard-right {
        width: 65%;
    }

    .chart-container {
        background: white;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
        text-align: center;
    }

    .order-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .order-table th, .order-table td {
            padding: 6px;
            border: 1px solid #ddd;
            text-align: center;
        }

        .order-table th {
            background: #f8f9fa;
        }

    .status {
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 12px;
        color: white;
    }

    .processing {
        background: orange;
    }

    .shipped {
        background: green;
    }
</style>

<!-- Thêm Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('revenueChart').getContext('2d');
